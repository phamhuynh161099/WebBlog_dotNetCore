@model SakataBlog.ViewModel.Catalog.PostFolder.PostVm
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Header{
    <header class="masthead" style="background-image: url(@Model.ImageFeature)">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>@Html.Raw(Model.Title)</h1>
                        <h2 class="subheading">@Html.Raw(Model.ShortDesc)</h2>
                        <span class="meta">
                            Posted by
                            <a href="#">@Model.CreatedBy</a>
                            on @Model.CreatedAt.ToString("dd-MM-yyy")
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </header>
}
<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        @Html.Raw(Model.Content)
    </div>
</div>